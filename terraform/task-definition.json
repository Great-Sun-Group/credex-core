{
  "family": "credex-core",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "credex-core",
      "image": "${CONTAINER_IMAGE}",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "${NODE_ENV}" },
        { "name": "PORT", "value": "3000" },
        { "name": "LOG_LEVEL", "value": "${LOG_LEVEL}" },
        { "name": "JWT_SECRET", "value": "${JWT_SECRET}" },
        {
          "name": "OPEN_EXCHANGE_RATES_API",
          "value": "${OPEN_EXCHANGE_RATES_API}"
        },
        {
          "name": "NEO_4J_LEDGER_SPACE_BOLT_URL",
          "value": "${NEO_4J_LEDGER_SPACE_BOLT_URL}"
        },
        {
          "name": "NEO_4J_LEDGER_SPACE_USER",
          "value": "${NEO_4J_LEDGER_SPACE_USER}"
        },
        {
          "name": "NEO_4J_LEDGER_SPACE_PASS",
          "value": "${NEO_4J_LEDGER_SPACE_PASS}"
        },
        {
          "name": "NEO_4J_SEARCH_SPACE_BOLT_URL",
          "value": "${NEO_4J_SEARCH_SPACE_BOLT_URL}"
        },
        {
          "name": "NEO_4J_SEARCH_SPACE_USER",
          "value": "${NEO_4J_SEARCH_SPACE_USER}"
        },
        {
          "name": "NEO_4J_SEARCH_SPACE_PASS",
          "value": "${NEO_4J_SEARCH_SPACE_PASS}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/credex-core",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
