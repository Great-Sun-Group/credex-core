{
  "name": "Credex Core Dev Container",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "saoudrizwan.claude-dev",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker",
        "yzhang.markdown-all-in-one",
        "github.vscode-github-actions"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.autoSave": "afterDelay"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [5000],
  "postCreateCommand": "npm install && sudo apt-get update && sudo apt-get install -y docker-compose && chmod +x /workspaces/credex-core/projects/merge/getDiff.sh && chmod +x /workspaces/credex-core/projects/merge/create_merge_request.sh",
  "remoteEnv": {
    "NODE_ENV": "development"
  }
}
