{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build"
  },
  "include": [
    "src/**/*.ts",
    "config/authenticate.ts",
    "config/config.ts",
    "config/swagger.ts"
  ],
  "exclude": ["node_modules"]
}
