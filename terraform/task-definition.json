{
  "family": "credex-core",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "credex-core",
      "image": "{{CONTAINER_IMAGE}}",
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 5000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "{{NODE_ENV}}" },
        { "name": "PORT", "value": "{{PORT}}" },
        { "name": "LOG_LEVEL", "value": "{{LOG_LEVEL}}" },
        { "name": "NEO4J_LEDGER_SPACE_BOLT_URL", "value": "{{NEO4J_LEDGER_SPACE_BOLT_URL}}" },
        { "name": "NEO4J_LEDGER_SPACE_USER", "value": "{{NEO4J_LEDGER_SPACE_USER}}" },
        { "name": "NEO4J_LEDGER_SPACE_PASS", "value": "{{NEO4J_LEDGER_SPACE_PASS}}" },
        { "name": "NEO4J_SEARCH_SPACE_BOLT_URL", "value": "{{NEO4J_SEARCH_SPACE_BOLT_URL}}" },
        { "name": "NEO4J_SEARCH_SPACE_USER", "value": "{{NEO4J_SEARCH_SPACE_USER}}" },
        { "name": "NEO4J_SEARCH_SPACE_PASS", "value": "{{NEO4J_SEARCH_SPACE_PASS}}" },
        { "name": "OPEN_EXCHANGE_RATES_API_KEY", "value": "{{OPEN_EXCHANGE_RATES_API_KEY}}" },
        { "name": "JWT_SECRET", "value": "{{JWT_SECRET}}" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/credex-core",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}